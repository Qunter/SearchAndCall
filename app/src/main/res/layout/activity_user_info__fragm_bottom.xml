<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f3f3f3"
             android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c3c3c3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_info_usermanegerBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="账号管理"
            android:drawablePadding="16dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_usermaneger_grey_500_24dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_right"
            android:paddingRight="16dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/user_info_settingsBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="相关设置"
            android:drawablePadding="16dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_settings_grey_500_24dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_right"
            android:paddingRight="16dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/user_info_shareBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="分享信息"
            android:drawablePadding="16dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_share_grey_500_24dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_right"
            android:paddingRight="16dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/user_info_sentBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="联系我们"
            android:drawablePadding="16dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_send_grey_500_24dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_right"
            android:paddingRight="16dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:id="@+id/user_info_aboutBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:drawablePadding="16dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_about_grey_500_24dp"
            android:paddingLeft="16dp"
            android:drawableRight="@drawable/ic_right"
            android:paddingRight="16dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>
</FrameLayout>